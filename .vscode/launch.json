    "version": "0.2.0",
    "configurations": [
        {
            "name": "Makefile",

            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/${workspaceFolderBasename}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "build",
            "presentation": {
                "hidden": false,
                "group": "",
                "order": 1
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",

                    "ignoreFailures": true
                }
            ],
        }
    ]
}